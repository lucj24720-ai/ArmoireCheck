{
  "name": "armoirecheck-backend",
  "version": "1.1.0",
  "description": "Backend API for ArmoireCheck - Tool cabinet management with image recognition",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:verbose": "jest --verbose",
    "db:init": "psql $DATABASE_URL -f database/init.sql",
    "db:seed": "psql $DATABASE_URL -f database/seed.sql",
    "db:reset": "npm run db:init && npm run db:seed",
    "lint": "eslint src/**/*.js --fix",
    "format": "prettier --write \"src/**/*.js\""
  },
  "keywords": [
    "tool-management",
    "cabinet",
    "inventory",
    "image-recognition",
    "express",
    "postgresql"
  ],
  "author": "lucj24720-ai",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/lucj24720-ai/ArmoireCheck.git"
  },
  "bugs": {
    "url": "https://github.com/lucj24720-ai/ArmoireCheck/issues"
  },
  "homepage": "https://github.com/lucj24720-ai/ArmoireCheck#readme",
  "dependencies": {
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "jsonwebtoken": "^9.0.2",
    "bcrypt": "^5.1.1",
    "joi": "^17.11.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.55.0",
    "prettier": "^3.1.1",
    "@types/jest": "^29.5.11",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "jest --bail --findRelatedTests"
    ]
  }
}